<?xml version="1.0" encoding="UTF-8"?>

<presentation apphelp="com.ibm.mbs.doc,forgotpswd/c_forgot_pswd.html" beanclass="psdi.webclient.beans.signature.ForgotPswdAppBean" debug="0" id="forgotpswd" mboname="FORGOTPASSWORD" systemnav="false" version="7.1.0.0">
	<page id="mainrec">
		<header id="forgotpswdpageHeader">
			<titlebar id="forgotpswdpageTitlebar">
				<hyperlink classname="powerwhite" id="forgotpswd_signoutlink" image="btn_signout.gif" label="Exit" mxevent="signout"/>
				<hyperlink classname="powerwhite" eventvalue="help" id="helplink" image="btn_help.gif" label="Help" mxevent="showmenu" targetid="pageTitlebar"/>
			</titlebar>
		</header>
		<clientarea id="clientarea">
			<tabgroup format="carddeck" id="forgotpswdtab">
				<tab default="true" id="forgotpswdinsert" type="insert">
					<section id="main_help_section1">
						<sectionrow id="main_help_section1_row1">
							<sectioncol id="main_help_section1_row1_col1">
								<helpgrid id="main_help_section1_help" innerhtml="If the system administrator enabled your user so that you can reset your password, when the request is processed you will receive an email notification. If an error message displays when you click Submit, the system administrator did not enable password reset for your user and you must contact the system administrator to request that your password is reset."/>
							</sectioncol>
						</sectionrow>
					</section>
					<section border="true" id="main_grid1" label="To request your password, enter the following">
						<textbox dataattribute="primaryemail" defaultfocus="true" id="main_grid1_2"/>
						<combobox dataattribute="pwhintquestion" id="main_grid1_3" smartfilloff="true"/>
						<textbox dataattribute="pwhintanswer" id="main_grid1_4" inputmode="password"/>
					</section>
					<section border="FALSE" id="main_grid3">
						<buttongroup id="btngroup" show="true">
							<pushbutton id="save" label="Submit" mxevent="submit" targetid="forgotpswd"/>
							<pushbutton id="exit" label="Exit" mxevent="signout" targetid="forgotpswd"/>
						</buttongroup>
					</section>
				</tab>
			</tabgroup>
		</clientarea>
		<include id="pageFooter"/>
	</page>
</presentation>
